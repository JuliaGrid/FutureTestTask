block variables

doctype html
html(lang="ru")
	head
		title= pageTitle
		link(href="css/style.css", rel="stylesheet")
	body
		div.black-overlay
		header.main-header
			div.main-header__wrapper
				img(src="img/helyfly.svg", alt="")
				p.main-header__city Москва
				svg(width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink").main-header__profile
					rect(width="20" height="20" fill="url(#pattern0)")
					defs
						pattern(id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1")
							use(xlink:href="#image0" transform="scale(0.05)")
					image(id="image0" width="20" height="20" xlink:href="data:image/png;base64,")
				p.main-header__phone
					span.main-header__phone-note Телефон:
					span.main-header__phone-number 8(800)-123-12-12
		main
		block content
		footer.main-footer
			div.main-footer__logo-networks
				img.main-footer__logo(src="img/helyfly.svg", alt="", width="84", height="16")
				div.main-footer__social-networks
					img(src="img/vk.png", alt="", width="25", height="15")
					img(src="img/facebook.png", alt="", width="25", height="25")
					img(src="img/instragram.png", alt="", width="25", height="25")
			div.main-footer__systems-language
				div.main-footer__systems
					img(src="img/MC.svg", alt="", width="34", height="21")
					img(src="img/VISA.svg", alt="", width="34", height="23")
					img(src="img/PP.svg", alt="", width="34", height="23")
				button.main-footer__language RU
			div.main-footer__info
				p.main-footer__support Тех. поддержка: 8(800)700-00-00
				p.main-footer__author © 2018 HELYFLY. All Rights Reserved.

		script(src='main.js')
			